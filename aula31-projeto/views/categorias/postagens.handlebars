<h1>{{categoria.nome}}</h1>

{{#each postagens}}
<div class="card mt-4">
    <div class="card-body">
        <h3>{{title}}</h3>
        <p>{{description}}</p>
        <a href="/postagem/{{slug}}"><button class="btn btn-success">Leia Mais</button></a>
        <hr>
        <small>Data de publicação: {{categoria.date}}</small>
    </div>
</div>

{{else}}
    <h5>Nenhuma postagem nesta categoria.</h5>
{{/each}}
